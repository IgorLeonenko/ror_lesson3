@mixin box_sizing {
  -moz-box-sizing:    border-box;
  -webkit-box-sizing: border-box;
  box-sizing:         border-box;
}
/* header */

#logo {
  float: left;
  margin-right: 10px;
  font-size: 1.7em;
  color: #fff;
  text-transform: uppercase;
  letter-spacing: -1px;
  padding-top: 10px;
  font-weight: bold;
  &:hover {
    color: #428bca;
    background-color: transparent;
    text-decoration: none;
  }
}

/* universal */
body {
  padding: 60px 0 0 0;
  background: url("<%= asset_path('blog-background.jpg') %>") 100% center fixed;
}

section {
  overflow: auto;
}

textarea {
  resize: vertical;
}

.center {
  text-align: center;
  h1 {
    margin-bottom: 10px;
  }
}
.jumbotron {
  background-color: rgba(255,255,255,0.6);
}

/* typography */

h1, h2, h3, h4, h5, h6 {
  line-height: 1;
}

h1 {
  font-size: 3em;
  letter-spacing: -2px;
}

h2 {
  font-size: 1.5em;
  letter-spacing: -1px;
  margin-bottom: 30px;
  font-weight: normal;
  color: #808080;
}

p {
  font-size: 1.1em;
  line-height: 1.7em;
}

/* footer */

footer {
  margin-top: 10px;
  padding-top: 5px;
  ul {
    list-style: none;
    margin-top: 9px;
    li {
      float: left;
      margin-left: 15px;
    }
  }
}
.navbar-bottom {
  background-color: rgba(34,34,34,0.9);
  margin-bottom: 0;
}

/* forms */

input, textarea, select, .uneditable-input {
  width: 100%;
  margin-bottom: 2px;
  @include box_sizing;
}
.help-inline {
  color: #a94442;
}
.btn:visited {
  color: #fff;
}

/* sidebar */

aside {
  section.user_info {
    margin-top: 20px;
  }
  section {
    padding: 10px 0;
    margin-top: 20px;
    &:first-child {
      border: 0;
      padding-top: 0;
    }
    span {
      display: block;
      margin-bottom: 3px;
      line-height: 1;
    }
    h1 {
      font-size: 1.4em;
      text-align: left;
      letter-spacing: -1px;
      margin-bottom: 10px;
      margin-top: 0px;
    }
    h1:last-child {
      margin-bottom: 20px;
    }
  }
}

.gravatar {
  float: left;
  margin-right: 10px;
}

.gravatar_edit {
  margin-top: 15px;
}

.bs-callout, .media {
  background-color: rgba(255,255,255,0.6);
  padding: 20px;
  margin: 20px 0;
  border: 1px solid #eee;
  border-radius: 3px;
}

.modal-dialog {
  a:link {
    background-color: transparent;
  }
  .modal-header {
    border:none;
  }
}

.comment-form {
  display:none;
}

.comment {
  margin-bottom: 10px;
  .media{
    padding-bottom: 10px;
  }
  img {
    width: 50px;
    height: 50px;
  }
  .comment-form {
    margin-bottom: 10px;
    .col-md-3 {
      padding-left: 0;
    }
  }
}
.comment-form.row{
  margin-top: 20px;
}

a.btn-xs:visited{
  color: #333333;
}

.table-bordered > tbody > tr > td, .table-bordered > thead > tr > th, .table-bordered{
  border: 1px solid #696969;
}
.table > thead > tr.info > th {
  background-color: rgba(47,79,79,0.6);
}

.table > thead > tr.info > th:last-child {
  width:  20.6%;
}

.controls {
  margin-bottom: 40px;
}

.comments {
  margin-top: 60px;
}