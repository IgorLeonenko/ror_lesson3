<div class="media">
  <div class="media-left">
    <%= gravatar_for post.user %>
    <h4 class="media-heading">
      <small><%= post.created_at.strftime("%d %b. %Y") %></small>
      <br/>
      <%= post.title %>
      <br/>
      <p><span style="font-size: 1.8em">Author: <i><%= post.user.name.capitalize %></i></span>
      <span class="pull-right text-primary"><i>Tags:</i> <%= post.tags.truncate(100) %></span></p>
    </h4>
  </div>
  <div class="media-body">
    <%= post.body.truncate(400) %>
    <br/>
    <i><%= link_to 'show more...', user_post_path(post.user.id, post), class: "text-primary" %></i>
  </div>
</div>