%header.navbar.navbar-fixed-top.navbar-inverse
  .container
    = link_to " Blog-leon", root_path, id: "logo", class: 'fa fa-paper-plane-o'
    %nav
      %ul.nav.navbar-nav.navbar-right
        %li= link_to " home", root_path, class: 'fa fa-home'
        - if current_user
          %li.dropdown{:role => "presentation"}
            %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              My actions
              %span.caret
            %ul.dropdown-menu
              %li= link_to ' account', user_path(current_user), class: 'fa fa-user'
              %li= link_to ' all posts', user_posts_path(current_user), class: 'fa fa-list-alt'
              %li= link_to ' favorite posts', favorite_posts_path, class: 'fa fa-star-o'
              %li= link_to ' users list', users_path, class: 'fa fa-users'
          %li= link_to " logout (#{current_user.email})", session_path(current_user), method: :delete, class: 'fa fa-sign-out'
        - else
          %li= link_to ' login', new_session_path, class: 'fa fa-sign-in'
