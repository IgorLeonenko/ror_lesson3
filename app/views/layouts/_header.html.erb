<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Blog-leon #{'| ' + current_user.name if current_user }", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <% if current_user %>
          <li role="presentation" class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
              My actions<span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to 'My account', user_path(current_user.id) %></li>
              <li><%= link_to 'My posts', '#' %></li>
            </ul>
          </li>
          <li><%= link_to 'Logout', session_path(current_user.id), method: :delete %></li>
        <% else %>
          <li><%= link_to 'Login', new_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>