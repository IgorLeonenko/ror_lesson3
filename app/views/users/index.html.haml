%ul.col-md-12
  - @users.each do |user|
    %li.col-md-6{ class: "#{ cycle('pull-left', 'pull-right') }" }
      .media
        .media-left
          = gravatar_for user
        .media-body
          %ul.list-group
            %li= user.name.capitalize
            %li= user.email
            %li Rating: #{user.rating}
            %li Likes: #{user.like}
            %li= link_to ' show more', profile_path(user), class: 'fa fa-eye btn btn-info'
= paginate @users, :theme => 'twitter-bootstrap-3', :pagination_class => 'pagination-sm'