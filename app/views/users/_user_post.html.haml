.bs-callout
  %ul.media-list
    %li= user_post.title
    %li= image_tag user_post.image_url, width: '40%' unless user_post.image_url.blank?
    %li= user_post.body.truncate(250)
    %li
      = link_to ' read more', user_post_path(@user.id, user_post.id), class: 'fa fa-eye btn btn-sm btn-info'
      - if current_user.id == user_post.user_id
        = link_to ' edit', edit_user_post_path(current_user.id, user_post.id), class: "btn btn-sm btn-info fa fa-file-text"