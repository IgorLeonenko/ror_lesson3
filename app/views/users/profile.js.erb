$('.posts').html("<%= escape_javascript(render partial: 'user_post', collection: @user_posts) %>");
$('.favorite-posts').html("<%= escape_javascript(render partial: 'user_favorite_post', collection: @user_favorite_posts) %>");

<% if params[:all_posts].present? %>
  $('.posts-link').html("<a class='fa fa-eye-slash btn btn-sm btn-info' data-remote='true' href='/users/<%=@user.name%>'> hide</a>");
<% else %>
  $('.posts-link').html("<a class='fa fa-eye btn btn-sm btn-info' data-remote='true' href='/users/<%=@user.name%>?all_posts=true'> show all</a>");
<% end %>

<% if params[:all_favorites].present? %>
  $('.favorite-posts-link').html("<a class='fa fa-eye-slash btn btn-sm btn-info' data-remote='true' href='/users/<%=@user.name%>'> hide</a>");
<% else %>
  $('.favorite-posts-link').html("<a class='fa fa-eye btn btn-sm btn-info' data-remote='true' href='/users/<%=@user.name%>?all_favorites=true'> show all</a>");
<% end %>