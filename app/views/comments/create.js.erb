<% if @comment.errors.any? %>
  $("#new-comment-<%= @post.id %> form .help-inline").html("<%= raw @comment.errors.full_messages.join(', ') %>");
  $("#new-comment-<%= @post.id %> form .form-group").addClass('has-error');
<% else %>
  $(".comments-post-<%= @post.id %>").html("<%= j nested_comments @post.comments.arrange %>").hide().fadeIn(1500);
  $("#new-comment-<%= @post.id %>").remove();
  $("#new-comment-<%= @post.id %> form")[0].reset();
  $("#new-comment-<%= @post.id %> form .form-group").removeClass('has-error');
  $("#new-comment-<%= @post.id %> form .help-inline").html("");
<% end %>