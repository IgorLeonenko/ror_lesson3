<% if @comment.errors.any? %>
  $("#edit_comment_<%= @comment.id %> .help-inline").html("<%= raw @comment.errors.full_messages.join(', ') %>");
  $("#edit_comment_<%= @comment.id %> .form-group").addClass('has-error');
<% else %>
  $("#comment-<%= @comment.id %>").html("<%= j render partial: 'comments/comment', locals: { comment: @comment, post: @post } %>").hide().fadeIn(1500);
  $("#edit_comment_<%= @comment.id %>").remove();
<% end %>