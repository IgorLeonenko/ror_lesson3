.form-group
  = f.label :title, class: 'control-label'
  %br/
  = f.text_field :title, class: "form-control"
.form-group
  = f.label :body, class: 'control-label'
  %br/
  = f.text_area :body, class: "form-control", rows: 10
.form-group{ class: "#{@post.errors.get(:tags).present? ? 'has-error' : ''}"}
  = f.label :tag_list, "Tags", class: 'control-label'
  %br/
  = f.text_field :tag_list, value: "#{ @post.tag_list.join(',') }", class: "form-control", placeholder: "Separated by commas. No more than 5"
  - if @post.errors.get(:tags).present?
    %span.help-inline
      = @post.errors.get(:tags).join('')
.form-group
  = f.label :image_url, class: 'control-label'
  %br/
  = f.text_field :image_url, class: "form-control"

= f.button "#{controller.action_name == 'new' || controller.action_name == 'create' ? ' create post' : ' update post'}", class: "btn btn-info fa fa-pencil-square", type: 'submit'
