<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<% if @posts.size == 0 %>
  <h3>No posts found</h3>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th>Tags</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.body.truncate(50) %></td>
          <td><%= post.tags %></td>
          <td>
            <%= link_to 'Show', post %>
            <%= link_to 'Edit', edit_post_path(post) %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<br>

<%= button_to 'New Post', new_post_path, method: :get %>
